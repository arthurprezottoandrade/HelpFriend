<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Help Friend</title>
        <link rel="icon" type="image/jpg" href="../public/images/logo_icone.jpg"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../public/css/cadastroCachorro.css"/>
    </head>
    <body>

    <header class="cabecalho">
        <button id="menuBtn" class="material-icons">menu</button>
        <div id="sideMenu" class="side-menu">
            <a href="#" class="close-btn" id="closeBtn">&times;</a>
            <a href="/inicio">INICIO</a>
            <a href="#">CONTATO</a>
            <a href="#">SOBRE</a>
        </div>
        <img id="logoPrincipal" class="logo" src="../public/images/logopng.png" alt="Logo Ícone">
        <div class="botoes-cabecalho">
            <button class="login-btn" href="">LOGIN</button>
            <button class="cadastro-btn" href="">CADASTRO</button>
        </div>
    </header>
    <main class="container">
        <div class="form-image">
            <img src="../public/images//undraw_dog_walking_re_l61p.svg">
        </div>
        <div class="form-cadastro">
            <form action="/cadastroCachorro" method="post" enctype="multipart/form-data">
                <div class="form-header">
                    <div class="title">
                        <h1>CADASTRE UM CACHORRO</h1>
                    </div>
                </div>
                <div class="input-group">
                    <div class="input-box">
                        <label for="nome">Nome do Cachorro</label>
                        <input type="text" id="nome" name="nome" placeholder="Digite o nome do cachoro" required>
                    </div>
                    <div class="input-box">
                        <label for="apelido">Apelido do Cachorro</label>
                        <input type="text" id="apelido" name="apelido" placeholder="Digite o apelido do cachorro">
                    </div>
                    <div class="input-box">
                        <label for="anoNascimento">Ano de Nascimento</label>
                        <select id="anoNascimento" name="anoNascimento" required>
                            <!-- Você pode gerar essas opções dinamicamente -->
                            <option value="2020">2023</option>
                            <option value="2020">2022</option>
                            <option value="2020">2021</option>
                            <option value="2020">2020</option>
                            <option value="2019">2019</option>
                            <option value="2019">2018</option>
                            <option value="2019">2017</option>
                            <option value="2019">2016</option>
                        </select>
                    </div>
                    <div class="input-box">
                        <label for="porte">Porte</label>
                        <select id="porte" name="porte" required>
                            <option value="Grande">Grande</option>
                            <option value="Médio">Médio</option>
                            <option value="Pequeno">Pequeno</option>
                        </select>
                    </div>
                    <div class="input-box">
                        <label for="raca">Raça</label>
                        <select id="raca" name="raca" required>
                            <!-- Adicione as raças disponíveis aqui -->
                            <option value="Bulldog">Bulldog</option>
                            <option value="Poodle">Poodle</option>
                            <!-- ... -->
                        </select>
                    </div>
                    <div class="input-box">
                        <label for="situacao">Situação</label>
                        <select id="situacao" name="situacao" required>
                            <option value="Apto">Apto para adoção</option>
                            <option value="Inapto">Inapto para adoção</option>
                        </select>
                    </div>
                </div>
                <div class="image-inputs">
                    <div class="image-input">
                        <label for="foto">Foto do Cachorro</label>
                        <input type="file" id="foto" name="foto">
                    </div>
                </div>
                <div class="cadastrar-button">
                    <button id="botaoAdotar">CADASTRAR</a></button>
                </div>
            </form>
        </div>
    </main>
    <!-- RODAPÉ -->
    <footer>
        <img class="img-rodape" src="../public/images/logo_verticalpng.png">
        <div class="rodape-btn">
            <a href="/inicio">INICIO</a>
            <a href="#">CONTATO</a>
            <a href="#">SOBRE</a>
        </div>
        <div class="redes-sociais">
            <img src="../public/images/facebook.png">
            <img src="../public/images/whatsapp.png">
            <img src="../public/images/instagram.png">
        </div>
        <p class="copyright"> Copyright &copy; 2023 Help Friend</p>
    </footer>
    <script src="../public/js/cadastroCachorro.js"></script>
</body>
</html>